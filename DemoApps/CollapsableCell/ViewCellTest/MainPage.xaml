<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ViewCellTest"
             xmlns:real="clr-namespace:Real.Xamarin.Forms.Extensions;assembly=RealXamarinFormsExtensions.CollapsableCell"
             x:Class="ViewCellTest.MainPage" Appearing="Handle_Appearing">
    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>
    <StackLayout>
        <ListView x:Name="TestListView"
                  SeparatorVisibility="None"
                  HasUnevenRows="true"
                  SelectionMode="None"
                  ItemsSource="{ Binding ListData }">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <real:CollapsableCell>
                        <real:CollapsableCell.CollapsedView>
                            <local:TestItemView />
                        </real:CollapsableCell.CollapsedView>
                        <real:CollapsableCell.ExpandedView>
                            <local:TestDetailView />
                        </real:CollapsableCell.ExpandedView>
                    </real:CollapsableCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>